---
const { title, img, desc } = Astro.props;
import { Image } from "astro:assets";
---

<div class="rounded-2xl border bg-white p-5 shadow-sm hover:shadow-md transition-shadow section-gap">
  {img && (
    <Image
      src={img}
      width={400}
      height={250}
      format="webp"
      alt={title}
      class="w-full h-50 object-cover rounded-md mb-4"
    />
  )}
  <h3 class="heading-3">{title}</h3>
  <p class="body-text">{desc}</p>
</div>
