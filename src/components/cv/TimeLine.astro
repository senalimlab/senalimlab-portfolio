---
const { title, subtitle } = Astro.props;
const hasDefaultSlot = Astro.slots.has("default");
---

<div class="flex gap-4 group">
  <div class="education__time relative">
    <span class="w-4 h-4 bg-miloYellow block rounded-full mt-2 z-10"></span>
    <span class="education__line absolute left-[7px] top-6 -bottom-12 w-[2px] bg-miloYellow group-last:hidden"></span>
  </div>
  <div class="flex-1">
    <h3 class="heading-3 mb-1">{title}</h3>
    <span class="body-text text-gray-600">{subtitle}</span>
    {hasDefaultSlot && (
      <div class="mt-2 body-text">
        <slot />
      </div>
    )}
  </div>
</div>
