---
const { title, subtitle } = Astro.props;
const hasDefaultSlot = Astro.slots.has("default");
---

<div class="flex gap-4">
  <div class="education__time">
    <span class="w-4 h-4 bg-miloYellow block rounded-full mt-2"></span>
    <span class="education__line bg-miloYellow block h-full w-[2px] translate-x-[7px]"></span>
  </div>
  <div class="flex-1">
    <h3 class="heading-3 mb-1">{title}</h3>
    <span class="text-sm text-gray-600">{subtitle}</span>
    {hasDefaultSlot && (
      <div class="mt-2 text-sm">
        <slot />
      </div>
    )}
  </div>
</div>
