---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { caseStudiesInclusion, caseStudiesMission } from "../content/casestudies";

---

<BaseLayout title = "Case tudies" sideBarActiveItemID="projects">

<!-- Inclusion & Everyday Systems -->
  <div>
    <div class="text-3xl w-full font-bold mb-5">Inclusion & Everyday Systems</div>
  </div>
  {caseStudiesInclusion.map((study, idx) => (
    <>
      <HorizontalCard {...study} />
      {idx < caseStudiesInclusion.length - 1 && <div class="divider my-0"></div>}
    </>
  ))}

  <!-- Mission-Critical Strategy -->
  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Mission-Critical Strategy</div>
  </div>
  {caseStudiesMission.map((study, idx) => (
    <>
      <HorizontalCard {...study} />
      {idx < caseStudiesMission.length - 1 && <div class="divider my-0"></div>}
    </>
  ))}


</BaseLayout>






