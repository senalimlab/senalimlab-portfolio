<style is:global>
  langflow-chat {
    position: fixed;
    bottom: 1rem;
    right: 1rem;
    z-index: 50;
  }
</style>

<langflow-chat
  window_title="Sena's Assistant"
  flow_id="a8d6fa1f-0ec3-4328-875b-7a2b769f2ed5"
  host_url="https://langflow.senalimlab.com">
</langflow-chat>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const chat = document.querySelector("langflow-chat");
    if (!chat) return;

    const adjustPosition = () => {
      const shadow = chat.shadowRoot;
      if (!shadow) {
        setTimeout(adjustPosition, 100);
        return;
      }
      const dialog = shadow.querySelector("div");
      if (!dialog) {
        setTimeout(adjustPosition, 100);
        return;
      }
      Object.assign(dialog.style, {
        position: "absolute",
        bottom: "0",
        right: "100%",
      });
    };

    adjustPosition();
  });
</script>


